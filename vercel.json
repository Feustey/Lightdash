{
    "buildCommand": "cd frontend && npm install && trunk build --release",
    "outputDirectory": "frontend/dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                },
                {
                    "key": "Cross-Origin-Opener-Policy",
                    "value": "same-origin"
                },
                {
                    "key": "Cross-Origin-Embedder-Policy",
                    "value": "require-corp"
                }
            ]
        },
        {
            "source": "/(.*).wasm",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/wasm"
                }
            ]
        }
    ],
    "env": {
        "NEXT_PUBLIC_API_URL": "https://api.lightdash.vercel.app",
        "NEXT_PUBLIC_SPARKSEER_API_KEY": "@sparkseer-api-key",
        "NEXT_PUBLIC_NODE_PUBKEY": "@node-pubkey"
    }
} 