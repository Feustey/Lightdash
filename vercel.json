{
  "version": 2,
  "functions": {
    "api/*.rs": {
      "runtime": "vercel-rust@4.0.0"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ],
  "buildCommand": "cd frontend && trunk build --release",
  "outputDirectory": "frontend/dist"
} 